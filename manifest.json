{
  "manifest_version": 3,
  "name": "Material Chrome Extension",
  "version": "0.1.0",
  "description": "A production-ready Chrome Extension.",
  "permissions": [
    "storage",
    "tabs",
    "sessions",
    "bookmarks",
    "sidePanel"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open MCE Side Panel"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}